#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <time.h>

#define MAX_USERNAME_LENGTH 30
#define MAX_PASSWORD_LENGTH 30
#define MAX_NO_LENGTH 10
#define MAX_ID_BUKU_LENGTH 10
#define MAX_JUDUL_LENGTH 30
#define MAX_PENULIS_LENGTH 30
#define MAX_PENERBIT_LENGTH 30
#define MAX_JUMLAH_HALAMAN_LENGTH 10
#define MAX_TAHUN_TERBIT_LENGTH 10
#define MAX_JUMLAH_BUKU_YANG_TERSEDIA_LENGTH 10

typedef struct {
    char username[MAX_USERNAME_LENGTH];
    char password[MAX_PASSWORD_LENGTH];
    int isAdmin;
} User;

typedef struct {
    int no;
    int id_buku;
    char judul[MAX_JUDUL_LENGTH];
    char penulis[MAX_PENULIS_LENGTH];
    char penerbit[MAX_PENERBIT_LENGTH];
    char jumlah_halaman[MAX_JUMLAH_HALAMAN_LENGTH];
    char tahun_terbit[MAX_TAHUN_TERBIT_LENGTH];
    char jumlah_buku_yang_tersedia[MAX_JUMLAH_BUKU_YANG_TERSEDIA_LENGTH];
    
} buku;

typedef struct {
    int id_buku;
    int userId;
    time_t borrowDate;
    time_t returnDate; // 0 if not returned yet
} Borrowing;
